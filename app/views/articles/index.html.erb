<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">Wikinimous</span>
    <span><%= link_to 'Create a new article', new_article_path %></span>
  </div>
</nav>
<div class="container">
  <div class="row mt-5">
    <% @articles.each do |article| %>
    <div class="col-4"style="padding:8px;">
      <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 100%; height: 100%;">
        <img src="..." class="card-img-top" alt="">
        <div class="card-body">
          <h3 class="card-title"><%= link_to article.title, article_path(article) %></h3>
          <p class="card-text"><%= article.content %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

